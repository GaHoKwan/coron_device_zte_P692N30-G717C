<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:IconPreferenceScreen="http://schemas.android.com/apk/res/cn.edu.ncwu.www">
    <PreferenceCategory android:title="操作">
        <Preference android:title="智能分屏" android:key="smartshow">
            <intent android:targetPackage="com.powermo.SmartBar" android:action="android.intent.action.MAIN" android:targetClass="com.powermo.SmartBar.MasterEntryActivity" />
        </Preference>
        <Preference android:title="屏幕助手" android:key="mipop">
            <intent android:targetPackage="com.android.mipop" android:action="android.intent.action.MAIN" android:targetClass="com.android.mipop.MIPopActivity" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="电源">
        <Preference android:title="定时开关机" android:key="schedulepoweronoff">
            <intent android:targetPackage="com.mediatek.schpwronoff" android:action="android.intent.action.MAIN" android:targetClass="com.mediatek.schpwronoff.AlarmClock" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="高级设置">
        <PreferenceScreen android:title="重启到recovery" android:key="recovery" android:summary="点击重启到recovery模式" />
        <PreferenceScreen android:title="更换recovery" android:key="replaceRecovery" android:summary="点击将更换recovery" />
        <PreferenceScreen android:title="刷入ROM" android:key="flashOta" android:summary="点击选择刷机包" />
    </PreferenceCategory>
    <PreferenceCategory android:title="关于作者">
        <PreferenceScreen android:title="JKwan_嘉豪仔" android:summary="专业打脸30年" android:action="android.intent.action.VIEW" android:data="http://weibo.cn/kwangaho"/>
    </PreferenceCategory>
</PreferenceScreen>
