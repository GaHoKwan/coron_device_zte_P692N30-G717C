<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:id="@id/edPhone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="请输入号码" android:layout_weight="1.0" />
        <Button android:id="@id/btnTest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="查询" />
    </LinearLayout>
    <TextView android:id="@id/tvResult" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="结果显示" />
    <ImageView android:layout_gravity="center" android:id="@id/ivPhoto" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>