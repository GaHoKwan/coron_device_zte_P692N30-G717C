<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="搜索类型:" />
        <Spinner android:id="@id/spinner_search_type" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="类别选择:" />
        <Spinner android:id="@id/spinner_type" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="条数:" />
        <EditText android:id="@id/edt_count" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="50" android:maxLength="8" android:digits="1234567890" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关键字(可空):" />
        <EditText android:id="@id/edt_keyword" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="地区:" />
        <EditText android:id="@id/edt_admin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="福建省厦门市" android:maxLength="20" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="排序方式:" />
        <Spinner android:id="@id/spinner_sort" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/btn_search" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="搜索" android:layout_weight="1.0" />
        <Button android:id="@id/btn_search_inland" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="大陆搜索" android:layout_weight="1.0" />
        <Button android:id="@id/btn_search_taiwan" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="台湾搜索" android:layout_weight="1.0" />
    </LinearLayout>
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:id="@id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>