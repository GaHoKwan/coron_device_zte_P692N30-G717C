<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/category_general_preferences" android:key="category_general_preferences">
        <ListPreference android:entries="@array/general_preference_auto_advance_entries" android:title="@string/general_preference_auto_advance_label" android:key="auto_advance" android:summary="@string/general_preference_auto_advance_summary" android:dialogTitle="@string/general_preference_auto_advance_dialog_title" android:entryValues="@array/general_preference_auto_advance_values" />
        <ListPreference android:entries="@array/general_preference_text_zoom_entries" android:title="@string/general_preference_text_zoom_label" android:key="text_zoom" android:dialogTitle="@string/general_preference_text_zoom_dialog_title" android:entryValues="@array/general_preference_text_zoom_values" />
        <CheckBoxPreference android:persistent="true" android:title="@string/general_preference_reply_all_label" android:key="reply_all" android:summary="@string/general_preference_reply_all_summary" android:defaultValue="false" />
        <PreferenceScreen android:title="@string/general_preferences_clear_trusted_senders_title" android:key="clear_trusted_senders" android:summary="@string/general_preferences_clear_trusted_senders_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/always_bcc_myself" android:key="bcc_myself" android:summary="@string/always_bcc_myself_summary" android:defaultValue="false" />
        <CheckBoxPreference android:persistent="true" android:title="@string/general_preference_auto_download_remaining_label" android:key="auto_download_remaining" android:summary="@string/general_preference_auto_download_remaining_summary" android:defaultValue="false" />
        <CheckBoxPreference android:persistent="true" android:title="@string/ask_before_deleting" android:key="ask_before_deleting" android:defaultValue="true" />
        <CheckBoxPreference android:persistent="true" android:title="@string/auto_clear_cache_title" android:key="auto_clear_cache" android:summary="@string/auto_clear_cache_description" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vip_settings" android:key="vip_settings">
        <CheckBoxPreference android:persistent="true" android:title="@string/vip_notifications" android:key="vip_notification" android:summary="@string/vip_settings_notify_summary" android:defaultValue="true" />
        <RingtonePreference android:layout="?android:preferenceLayoutChild" android:title="@string/vip_settings_ringtone" android:key="vip_ringtone" android:dependency="vip_notification" android:defaultValue="content://settings/system/notification_sound" android:ringtoneType="notification" />
        <CheckBoxPreference android:persistent="true" android:layout="?android:preferenceLayoutChild" android:title="@string/vip_settings_vibrate_label" android:key="vip_vibarate" android:summary="@string/vip_settings_vibrate_summary" android:dependency="vip_notification" android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>