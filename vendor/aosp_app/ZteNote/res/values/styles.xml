<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CreateNewNoteTheme" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CreateNewNoteTheme.WithActionBar" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/CreateNewNoteActionBarStyle</item>
    </style>
    <style name="CreateNewNoteActionBarStyle" parent="@*android:style/Widget.Holo.Light.ActionBar">
        <item name="android:windowBackground">@color/title_background_color</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="CreateNewNoteTheme.WithActionBarWallpaper" parent="@style/CreateNewNoteTheme.WithActionBar">
        <item name="android:windowTitleBackgroundStyle">@style/title_background_style</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="title_background_style">
        <item name="android:background">@color/edit_note_button_pressed_background_color</item>
    </style>
    <style name="footer_img">
        <item name="android:gravity">center</item>
        <item name="android:cropToPadding">true</item>
    </style>
    <style name="footer_img_button" parent="@style/footer_img">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/footer_light_grey_bg_selector</item>
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
    <style name="footer_layout">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@*android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="scroll_footer">
        <item name="android:paddingLeft">18.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdgeLength">1.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="CreateNoteActionButton" parent="@*android:style/Widget.Holo.Light.ActionButton">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="CreateNoteActionButtonImage">
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CreateNoteActionButtonText" parent="@style/CreateNoteActionButton">
        <item name="android:textAppearance">?android:actionMenuTextAppearance</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">none</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="CreateNoteAddButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/imagebutton_add_background</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ActionBarButton" parent="@*android:style/Widget.Holo.Light.ActionButton">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingLeft">1.0dip</item>
        <item name="android:paddingRight">1.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ActionButtonText">
        <item name="android:textSize">12.5dip</item>
        <item name="android:textColor">@color/title_bottom_text_color</item>
        <item name="android:ellipsize">none</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HomeActionBarTextView" parent="@style/ActionBarButton">
        <item name="android:textSize">12.5dip</item>
        <item name="android:textColor">@color/title_bottom_text_color</item>
    </style>
    <style name="ViewNotesTheme" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ViewNotesActionBarStyle</item>
    </style>
    <style name="ViewNotesActionBarStyle" parent="@*android:style/Widget.Holo.Light.ActionBar">
        <item name="android:height">60.0dip</item>
    </style>
</resources>
