<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.RotateLayout style="@style/RecordingLayout"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:id="@id/recording_time_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <TextView android:id="@id/recording_time" style="@style/RecordingText" />
            <ImageView android:id="@id/btn_pause_resume" android:background="@drawable/bg_pressed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8.0dip" android:src="@drawable/ic_recording_pause" />
        </LinearLayout>
        <RelativeLayout android:id="@id/recording_size_group" android:background="@drawable/bg_indicator_background" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/recording_time_group" android:layout_centerVertical="true">
            <TextView android:id="@id/recording_current" android:layout_alignParentLeft="true" style="@style/RecordingSizeText" />
            <SeekBar android:id="@id/recording_progress" android:focusable="false" android:clickable="false" android:thumb="@null" android:layout_toLeftOf="@id/recording_total" android:layout_toRightOf="@id/recording_current" style="@style/RecordingSizeProgress" />
            <TextView android:id="@id/recording_total" android:layout_alignParentRight="true" style="@style/RecordingSizeText" />
        </RelativeLayout>
    </RelativeLayout>
</com.android.camera.ui.RotateLayout>