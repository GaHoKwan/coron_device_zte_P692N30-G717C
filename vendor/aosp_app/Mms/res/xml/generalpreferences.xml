<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_title_display_preference_settings" android:key="pref_key_display_preference_settings">
        <Preference android:title="@string/pref_chat_wallpaper" android:key="pref_key_chat_wallpaper" />
        <Preference android:title="@string/pref_title_message_font_size" android:key="pref_key_message_font_size" android:summary="@string/pref_summary_message_font_size" />
        <CheckBoxPreference android:title="@string/pref_auto_rotation" android:key="pref_key_auto_rotation" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/pref_show_email_address" android:key="pref_key_show_email_address" android:summary="@string/pref_summary_show_email_address" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_sms_storage_title" android:key="pref_key_storage_settings">
        <Preference android:persistent="false" android:title="@string/pref_title_storage_status" android:key="pref_key_storage_status" android:summary="@string/pref_title_storage_status" />
        <CheckBoxPreference android:title="@string/pref_title_auto_delete" android:key="pref_key_auto_delete" android:summary="@string/pref_summary_auto_delete" android:defaultValue="false" />
        <Preference android:persistent="false" android:layout="?android:preferenceLayoutChild" android:title="@string/pref_title_sms_delete" android:key="pref_key_sms_delete_limit" android:summary="@string/pref_summary_delete_limit" android:dependency="pref_key_auto_delete" />
        <Preference android:persistent="false" android:layout="?android:preferenceLayoutChild" android:title="@string/pref_title_mms_delete" android:key="pref_key_mms_delete_limit" android:summary="@string/pref_summary_delete_limit" android:dependency="pref_key_auto_delete" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_title_backup_restore_settings" android:key="pref_key_backup_restore_settings">
        <Preference android:persistent="false" android:title="@string/pref_backage_message" android:key="pref_key_backup_message" android:summary="@string/pref_summary_backup_message" />
        <Preference android:persistent="false" android:title="@string/pref_restore_message" android:key="pref_key_restore_message" android:summary="@string/pref_summary_restore_message" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/cell_broadcast_title">
        <Preference android:persistent="false" android:title="@string/cell_broadcast" android:key="pref_key_cell_broadcast" android:summary="@string/cell_broadcast_settings" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_title_wappush_settings" android:key="pref_key_wappush_settings">
        <CheckBoxPreference android:title="@string/pref_title_wappush_enable" android:key="pref_key_wappush_enable" android:summary="@string/pref_summary_wappush_enable" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/pref_title_wappush_sl_autoloading" android:key="pref_key_wappush_sl_autoloading" android:summary="@string/pref_summary_wappush_sl_autoloading" android:dependency="pref_key_wappush_enable" android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>