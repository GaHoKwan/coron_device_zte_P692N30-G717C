    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_sms_settings_title" android:key="pref_key_sms_settings">
        <CheckBoxPreference android:title="@string/pref_title_sms_delivery_reports" android:key="pref_key_sms_delivery_reports" android:summary="@string/pref_summary_sms_delivery_reports" android:defaultValue="false" />
        <Preference android:title="@string/pref_title_manage_sim_messages" android:key="pref_key_manage_sim_messages" android:summary="@string/pref_summary_manage_sim_messages" />
        <Preference android:title="@string/quick_text_editor" android:key="pref_key_quick_text_editor" android:summary="@string/quick_text_editor" />
        <Preference android:title="@string/sms_service_center" android:key="pref_key_sms_service_center" android:summary="@string/sms_service_center" />
        <Preference android:title="@string/sms_validity_period" android:key="pref_key_sms_validity_period" android:summary="@string/sms_validity_period" />
        <ListPreference android:entries="@array/pref_tablet_sms_save_location_choices" android:title="@string/sms_save_location" android:key="pref_key_sms_save_location" android:summary="@string/sms_save_location" android:defaultValue="Device" android:dialogTitle="@string/sms_save_location" android:entryValues="@array/pref_tablet_sms_save_location_values" />
        <ListPreference android:entries="@array/pref_sms_input_mode_choice" android:title="@string/sms_input_mode_title" android:key="pref_key_sms_input_mode" android:summary="@string/sms_input_mode_summary" android:defaultValue="Automatic" android:dialogTitle="@string/sms_input_mode_dialog_title" android:entryValues="@array/pref_sms_input_mode_values" />
