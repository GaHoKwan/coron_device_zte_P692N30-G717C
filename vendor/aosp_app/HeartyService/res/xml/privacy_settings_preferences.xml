<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen android:persistent="false" android:layout="@layout/custom_preference" android:title="@string/privacy_password_modify" android:key="privacy_password" android:summary="@string/security_password_modify_summary">
        <intent android:action="com.zte.heartyservice.intent.action.ACTION_RESET_PRIVACY_PASSWORD" />
    </PreferenceScreen>
    <PreferenceScreen android:persistent="false" android:layout="@layout/custom_preference" android:title="@string/pattern_feedback" android:key="privacy_pattern_feedback" android:summary="@string/pattern_feedback_summary" />
    <CheckBoxPreference android:persistent="true" android:layout="@layout/custom_preference" android:title="@string/disguise_privacy_enable" android:key="privacy_disguise_enable" android:summary="@string/disguise_privacy_enable_summary" android:defaultValue="false" />
    <PreferenceScreen android:persistent="true" android:layout="@layout/custom_preference_item" android:title="@string/disguise_password_modify" android:key="privacy_disguise_password" android:dependency="privacy_disguise_enable" android:defaultValue="">
        <intent android:action="com.zte.heartyservice.intent.action.ACTION_SET_DISGUISE_PASSWORD" />
    </PreferenceScreen>
    <PreferenceScreen android:persistent="true" android:layout="@layout/custom_preference" android:title="@string/privacy_enter_setting" android:key="privacy_enter_name" android:summary="@string/privacy_enter_setting_summary" android:defaultValue="">
        <intent android:targetPackage="com.zte.heartyservice" android:targetClass="com.zte.heartyservice.privacy.PrivacyEnterSetting" />
    </PreferenceScreen>
    <CheckBoxPreference android:persistent="true" android:layout="@layout/custom_preference" android:title="@string/privacy_notification_enable" android:key="privacy_notification_enable" android:defaultValue="true" />
    <CheckBoxPreference android:persistent="true" android:layout="@layout/custom_preference" android:title="@string/privacy_backup_notice" android:key="privacy_backup_notice" android:defaultValue="true" android:summaryOn="@string/privacy_backup_notice_enable" android:summaryOff="@string/privacy_backup_notice_disable" />
    <PreferenceScreen android:persistent="false" android:layout="@layout/custom_preference" android:title="@string/privacy_backup" android:key="privacy_backup" />
    <PreferenceScreen android:persistent="false" android:layout="@layout/custom_preference" android:title="@string/privacy_restore" android:key="privacy_restore" />
</PreferenceScreen>