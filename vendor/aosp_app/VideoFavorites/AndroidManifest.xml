<?xml version="1.0" encoding="utf-8"?>
<manifest android:versionCode="2" android:versionName="2.0" package="com.mediatek.videofavorites"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.ADVANCED_WIDGET_API" />
    <application android:theme="@*android:style/Theme.Translucent" android:label="@string/app_name" android:icon="@drawable/app_icon">
        <activity android:name=".VFWidgetTestActivity" />
        <receiver android:label="@string/app_name" android:name=".WidgetXLarge">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mediatek.videofavorites.REFRESH" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/videofavorite_widget_large_four_info" />
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_SCANNER_FINISHED" />
                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CONFIGURATION_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mediatek.intent.action.SETTINGS_PACKAGE_DATA_CLEARED" />
            </intent-filter>
        </receiver>
        <service android:name="WidgetAdapter" android:permission="android.permission.BIND_REMOTEVIEWS" android:exported="true" />
        <provider android:name="com.mediatek.videofavorites.VideoFavoritesProvider" android:exported="true" android:authorities="com.mediatek.videofavorites.provider" />
        <activity android:theme="@style/Theme.Transparent" android:name=".WidgetActionActivity" android:screenOrientation="behind" android:configChanges="orientation|screenSize" />
    </application>
</manifest>