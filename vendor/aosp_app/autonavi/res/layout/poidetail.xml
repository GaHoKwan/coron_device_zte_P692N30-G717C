<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@color/general_back_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.autonavi.xmgd.view.GDTitle android:id="@id/poidetail_title" android:layout_width="fill_parent" android:layout_height="@dimen/gdtitle_height" android:layout_alignParentTop="true" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/poidetail_title">
        <LinearLayout android:orientation="vertical" android:background="@drawable/list_poi_top" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/poidetail_item_margin" android:layout_marginTop="@dimen/poidetail_item_margin" android:layout_marginRight="@dimen/poidetail_item_margin">
            <TextView android:textSize="@dimen/poidetail_title_textsize" android:textColor="@color/poidetail_title_textcolor" android:id="@id/poidetail_name" android:paddingLeft="@dimen/poidetail_text_paddingLeft" android:paddingTop="@dimen/poidetail_title_paddingTop" android:paddingRight="@dimen/poidetail_text_paddingLeft" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="这个是一个灰常灰常灰常灰常长的POI名称" android:layout_weight="1.0" />
            <TextView android:textSize="@dimen/poidetail_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:id="@id/poidetail_tel" android:paddingLeft="@dimen/poidetail_text_paddingLeft" android:paddingTop="@dimen/poidetail_text_paddingTop" android:paddingRight="@dimen/poidetail_text_paddingLeft" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0592-88888888" android:layout_weight="1.0" />
            <RelativeLayout android:paddingLeft="@dimen/poidetail_text_paddingLeft" android:paddingTop="@dimen/poidetail_text_paddingTop" android:paddingRight="@dimen/poidetail_text_paddingLeft" android:paddingBottom="@dimen/poidetail_title_paddingTop" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="2.0">
                <TextView android:textSize="@dimen/poidetail_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:id="@id/poidetail_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="999.9KM" android:layout_alignParentRight="true" />
                <TextView android:textSize="@dimen/poidetail_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:id="@id/poidetail_area" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="这个是一个灰常灰常灰常灰常长的POI区域" android:layout_toLeftOf="@id/poidetail_distance" android:layout_alignParentLeft="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/poidetail_item_margin" android:layout_marginRight="@dimen/poidetail_item_margin" android:layout_marginBottom="@dimen/poidetail_item_margin">
            <ImageView android:id="@id/poidetail_share" android:background="@drawable/list_poi_share_bg" android:paddingTop="@dimen/poidetail_image_padding" android:paddingBottom="@dimen/poidetail_image_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/ic_btn_poi_share" android:layout_weight="3.0" />
            <ImageView android:id="@id/poidetail_navi" android:background="@drawable/list_poi_nav_bg" android:paddingTop="@dimen/poidetail_image_padding" android:paddingBottom="@dimen/poidetail_image_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/ic_btn_poi_nav" android:layout_weight="3.0" />
            <ImageView android:id="@id/poidetail_call" android:background="@drawable/list_poi_call_bg" android:paddingTop="@dimen/poidetail_image_padding" android:paddingBottom="@dimen/poidetail_image_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/ic_btn_poi_call" android:layout_weight="3.0" />
        </LinearLayout>
        <include android:id="@id/poidetail_opera_view" android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/poidetail_opera" />
    </LinearLayout>
</RelativeLayout>