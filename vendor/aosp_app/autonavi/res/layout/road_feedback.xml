<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/general_back_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.autonavi.xmgd.view.GDTitle android:id="@id/title" android:layout_width="wrap_content" android:layout_height="@dimen/gdtitle_height" />
    <ScrollView android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/activity_layout_margin">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSizeSmall" android:textColor="@color/feedback_textview_textcolor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_hint_data" />
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/roadfeedback_margintop">
                <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/feedback_textview_textcolor" android:id="@id/name" android:paddingTop="@dimen/roadfeedback_paddingtop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_data_name" />
                <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/roadfeedback_start_color" android:gravity="center" android:id="@id/name_star" android:paddingTop="@dimen/roadfeedback_paddingtop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="*" android:layout_alignParentRight="true" />
                <EditText android:id="@id/name_edit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/edittext_min_height" android:layout_toLeftOf="@id/name_star" android:layout_toRightOf="@id/name" style="@style/gdedittext_style" />
                <TextView android:textSize="@dimen/textSizeSmall" android:textColor="@color/feedback_textview_textcolor" android:id="@id/name_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/roadfeedback_marginleft" android:text="@string/feedback_name_hint" android:layout_below="@id/name_edit" />
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/roadfeedback_margintop">
                <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/feedback_textview_textcolor" android:id="@id/err_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_data_err" />
                <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/roadfeedback_start_color" android:gravity="center" android:id="@id/err_star" android:paddingTop="@dimen/roadfeedback_paddingtop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="*" android:layout_alignParentRight="true" />
                <Spinner android:id="@id/err_type_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@id/err_star" android:layout_toRightOf="@id/err_type" />
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15.0dip">
                <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/feedback_textview_textcolor" android:id="@id/label_detail" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/feedback_hint_input" />
                <LinearLayout android:id="@id/detail_merge" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/label_detail">
                    <EditText android:id="@id/entry_detail" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginTop="@dimen/roadfeedback_entrydetail_margintop" android:minHeight="@dimen/edittext_min_height" android:maxLength="250" android:layout_weight="1.0" style="@style/gdedittext_style" />
                    <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/roadfeedback_start_color" android:gravity="center" android:id="@id/detail_star" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="*" />
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@id/bottombar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/roadfeedback_margintop" android:layout_below="@id/detail_merge">
                    <Button android:layout_gravity="center" android:id="@id/up" android:layout_width="fill_parent" android:layout_height="@dimen/activity_bottom_button_height" android:text="@string/feedback_commit" style="@style/gdbutton_style" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>