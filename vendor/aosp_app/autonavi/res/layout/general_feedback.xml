<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/general_back_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.autonavi.xmgd.view.GDTitle android:id="@id/title" android:layout_width="wrap_content" android:layout_height="@dimen/gdtitle_height" />
    <ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/activity_layout_margin">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/feedback_textview_textcolor" android:id="@id/label_detail" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/feedback_hint_input" />
            <EditText android:gravity="top" android:id="@id/entry_detail" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/general_feedback_margintop" android:minHeight="150.0dip" android:maxLength="250" style="@style/gdedittext_style" />
            <TextView android:textSize="@dimen/textSizeMedium" android:textColor="@color/feedback_textview_textcolor" android:id="@id/label_contact" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/feedback_hint_contact" />
            <EditText android:id="@id/entry_contact" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/general_feedback_margintop" android:minHeight="@dimen/edittext_min_height" android:maxLength="11" android:digits="1234567890" android:inputType="number" style="@style/gdedittext_style" />
            <Button android:layout_gravity="center" android:id="@id/up" android:layout_width="fill_parent" android:layout_height="@dimen/activity_bottom_button_height" android:layout_marginTop="@dimen/general_feedback_margintop" android:text="@string/feedback_commit" style="@style/gdbutton_style" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>