<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.autonavi.xmgd.user.GDMyNavigateTitle android:id="@id/title_routes_manage" android:layout_width="fill_parent" android:layout_height="@dimen/gdtitle_height" android:layout_alignParentTop="true" />
    <LinearLayout android:orientation="horizontal" android:id="@id/route_manage_rule" android:layout_width="fill_parent" android:layout_height="@dimen/routemanage_rules_height" android:layout_below="@id/title_routes_manage">
        <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_best" android:background="@drawable/tab_bg" android:layout_width="wrap_content" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="4.0" />
        <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_highway" android:background="@drawable/tab_bg" android:layout_width="wrap_content" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="4.0" />
        <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_economy" android:background="@drawable/tab_bg" android:layout_width="wrap_content" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="4.0" />
        <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_short" android:background="@drawable/tab_bg_noline" android:layout_width="wrap_content" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="4.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/route_route_control" android:layout_width="fill_parent" android:layout_height="@dimen/routemanage_controls_height" android:layout_alignParentBottom="true">
        <include android:gravity="center" android:id="@id/btn_route_simulate" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="3.0" layout="@layout/routemanage_item" />
        <include android:gravity="center" android:id="@id/btn_route_delete" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="3.0" layout="@layout/routemanage_item" />
        <include android:gravity="center" android:id="@id/btn_route_navi" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="3.0" layout="@layout/routemanage_item" />
    </LinearLayout>
    <TextView android:textSize="@dimen/routemanage_statistics_textsize" android:textColor="@color/routesmanage_statistics_color" android:gravity="center_horizontal" android:id="@id/route_manage_statistics_info" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="这个是路线统计信息" android:layout_below="@id/route_manage_rule" />
    <ListView android:id="@id/route_manage_list" android:background="@color/general_list_back_color" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="@color/general_list_back_color" android:childDivider="@color/list_driver_color" android:divider="@color/list_driver_color" android:dividerHeight="0.5dip" android:layout_above="@id/route_route_control" android:layout_below="@id/route_manage_statistics_info" />
    <ImageView android:background="#ffc6c6c6" android:layout_width="fill_parent" android:layout_height="0.5dip" android:layout_above="@id/route_route_control" />
</RelativeLayout>