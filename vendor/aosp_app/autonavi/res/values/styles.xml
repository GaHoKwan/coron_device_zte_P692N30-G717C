<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="viewmode_drawer_style" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/expand_to_left</item>
        <item name="android:windowExitAnimation">@anim/collapse_to_right</item>
    </style>
    <style name="tip_poi_style" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/expand_up</item>
        <item name="android:windowExitAnimation">@anim/collapse_down</item>
    </style>
    <style name="AppBaseTheme" parent="@*android:style/Theme.NoTitleBar" />
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:dropDownListViewStyle">@style/GdSpinnerStyle</item>
    </style>
    <style name="DialogBaseTheme" parent="@*android:style/Theme.Dialog" />
    <style name="DialogTheme" parent="@style/DialogBaseTheme" />
    <style name="dialogContentTheme">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/content_color</item>
    </style>
    <style name="dialogBtn">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dialog_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_btn_padding_buttom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="gdedittext_style" parent="@*android:style/Widget.EditText">
        <item name="android:textSize">@dimen/search_edittext_textsize</item>
        <item name="android:textColor">@color/search_editext_color</item>
        <item name="android:textColorHint">@color/search_editext_hintcolor</item>
        <item name="android:background">@drawable/gdaccount_textfield</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="gdaccount_edittext_style" parent="@style/gdedittext_style">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:layout_margin">10.0dip</item>
    </style>
    <style name="gdaccount_edittext_password_style" parent="@style/gdaccount_edittext_style">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="gdbutton_style" parent="@*android:style/Widget.Button">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_default</item>
    </style>
    <style name="gdaccount_button_style" parent="@style/gdbutton_style">
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="GdSpinnerStyle" parent="@*android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ffc6c6c6</item>
        <item name="android:dividerHeight">0.5dip</item>
    </style>
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
