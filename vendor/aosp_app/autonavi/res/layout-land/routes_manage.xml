<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.autonavi.xmgd.user.GDMyNavigateTitle android:id="@id/title_routes_manage" android:layout_width="fill_parent" android:layout_height="@dimen/gdtitle_height" android:layout_alignParentTop="true" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/title_routes_manage">
        <LinearLayout android:orientation="vertical" android:id="@id/routemanage_right_control" android:background="@color/general_back_color" android:layout_width="@dimen/routemanage_controls_land_width" android:layout_height="fill_parent" android:layout_alignParentRight="true">
            <LinearLayout android:orientation="vertical" android:id="@id/route_manage_rule" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="10.0dip" android:layout_weight="3.0">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="2.0">
                    <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_best" android:background="@drawable/list_poi_topleft" android:layout_width="fill_parent" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="2.0" />
                    <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_highway" android:background="@drawable/list_poi_topright" android:layout_width="fill_parent" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="2.0" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="2.0">
                    <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_economy" android:background="@drawable/list_poi_bottomleft" android:layout_width="fill_parent" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="2.0" />
                    <Button android:textSize="@dimen/routemanage_item_textsize" android:textColor="@color/poidetail_general_textcolor_normal" android:gravity="center" android:id="@id/btn_rule_short" android:background="@drawable/list_poi_bottomright" android:layout_width="fill_parent" android:layout_height="fill_parent" android:singleLine="true" android:layout_weight="2.0" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/route_route_control" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="10.0dip" android:layout_weight="2.0">
                <include android:gravity="center" android:id="@id/btn_route_simulate" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="3.0" layout="@layout/routemanage_item" />
                <include android:gravity="center" android:id="@id/btn_route_delete" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="3.0" layout="@layout/routemanage_item" />
                <include android:gravity="center" android:id="@id/btn_route_navi" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="3.0" layout="@layout/routemanage_item" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_toLeftOf="@id/routemanage_right_control">
            <TextView android:textSize="@dimen/routemanage_statistics_textsize" android:textColor="@color/routesmanage_statistics_color" android:gravity="center_horizontal" android:id="@id/route_manage_statistics_info" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="这个是路线统计信息" android:layout_alignParentTop="true" />
            <ListView android:id="@id/route_manage_list" android:background="@color/general_list_back_color" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="@color/general_list_back_color" android:childDivider="@color/list_driver_color" android:divider="@color/list_driver_color" android:dividerHeight="0.5dip" android:layout_below="@id/route_manage_statistics_info" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>