<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditWithActionBar" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/EditActionBarStyle</item>
    </style>
    <style name="EditActionBarStyle" parent="@*android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="EditSettingActionButton" parent="@*android:style/Widget.Holo.Light.ActionButton">
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="EditSettingActionButtonText">
        <item name="android:textAppearance">?android:actionMenuTextAppearance</item>
        <item name="android:textColor">#ff424242</item>
        <item name="android:ellipsize">none</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="activityTitleBackground" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:actionBarStyle">@style/TitleStyle</item>
    </style>
    <style name="TitleStyle" parent="@*android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_grounding</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:shadowColor">@color/white_text</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="DialogStyle" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
    </style>
</resources>
