<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@*android:id/background">
        <shape>
            <corners android:radius="10.0dip" />
            <gradient android:startColor="@color/letv_transparent" android:endColor="@color/letv_transparent" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/letv_transparent" />
        </shape>
    </item>
    <item android:id="@*android:id/secondaryProgress">
        <clip android:gravity="bottom" android:clipOrientation="vertical">
            <shape>
                <corners android:radius="10.0dip" />
                <gradient android:startColor="@color/letv_transparent" android:endColor="@color/letv_transparent" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/letv_transparent" />
            </shape>
        </clip>
    </item>
    <item android:id="@*android:id/progress">
        <clip android:gravity="bottom" android:clipOrientation="vertical">
            <shape>
                <corners android:radius="10.0dip" />
                <gradient android:startColor="@color/letv_red" android:endColor="@color/letv_red" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/letv_red" />
            </shape>
        </clip>
    </item>
</layer-list>